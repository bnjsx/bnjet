/**
 * TypeScript configuration for BNJSX project.
 *
 * - This configuration file is used when running `npm run build` to compile your TypeScript code.
 * - The build output will be placed in the `app` directory, and the source files are maintained in the `src` directory.
 */

// prettier-ignore
{
  "compilerOptions": {
    /* ğŸ“‚ Output Configuration */
    "outDir": "app",                        // âœ… Compiled JavaScript files go here
    "rootDir": "src",                       // âœ… Keeps source files structured
   
    /* ğŸ“¦ Module & Interop */
    "module": "CommonJS",                   // âœ… Use CommonJS modules (standard for Node.js)
    "moduleResolution": "Node",             // âœ… Ensures Node.js module resolution
    "esModuleInterop": true,                // âœ… Fixes compatibility between CommonJS & ESM modules
    "allowSyntheticDefaultImports": true,   // âœ… Allows default imports from CommonJS modules

    /* ğŸ¯ Target & Compatibility */
    "target": "ES2018",                     // âœ… Modern JavaScript for Node.js
    "lib": ["ES2018"],                      // âœ… No DOM-related libraries (only ES features)

    /* ğŸ› ï¸ Type Checking & Linting */
    "strict": false,                        // âœ… (Set to true for stricter type checking)
    "noImplicitAny": true,                  // âœ… Prevents untyped variables
    "noUnusedLocals": true,                 // âœ… Catches unused variables
    "noUnusedParameters": true,             // âœ… Catches unused function parameters
    "noFallthroughCasesInSwitch": true,     // âœ… Prevents missing switch cases
    "skipLibCheck": true                    // âœ… Speeds up compilation by skipping library checks
  },

  /* ğŸ“Œ Included Files */
  "include": ["src"],                        // âœ… Only compile files inside the `src/` folder
}
