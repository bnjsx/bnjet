/**
 * TypeScript configuration for Vite project.
 *
 * - This configuration file is used for Vite's frontend development setup, optimized for modern JavaScript and TypeScript features.
 * - The TypeScript files are processed from the `assets/ts/` folder, and the configuration ensures smooth integration with Vite.
 */

// prettier-ignore
{
  "compilerOptions": {
    /* ðŸŽ¯ Target & Compatibility */
    "target": "ES2020",                       // âœ… Use modern JavaScript features
    "lib": ["ES2020", "DOM", "DOM.Iterable"], // âœ… Include DOM typings for frontend development
    "useDefineForClassFields": true,          // âœ… Aligns class field behavior with JavaScript

    /* ðŸ“¦ Module & Resolution */
    "module": "ESNext",                       // âœ… Enables latest ES module syntax
    "moduleResolution": "bundler",            // âœ… Optimized for bundlers like Vite
    "moduleDetection": "force",               // âœ… Ensures modules are detected properly
    "allowImportingTsExtensions": true,       // âœ… Allows direct imports of .ts files
    "isolatedModules": true,                  // âœ… Ensures each file is treated as a separate module
    "noEmit": true,                           // âœ… Prevents TypeScript from emitting compiled files
    
    /* ðŸš€ Performance & Type Checking */
    "skipLibCheck": true,                     // âœ… Skips type checking of declaration files (faster builds)
    "strict": true,                           // âœ… Enables strict type checking
    "noUnusedLocals": true,                   // âœ… Catches unused variables
    "noUnusedParameters": true,               // âœ… Catches unused function parameters
    "noFallthroughCasesInSwitch": true,       // âœ… Prevents missing switch cases
    "noUncheckedSideEffectImports": true      // âœ… Helps catch side-effect-only imports
  },

  /* ðŸ“Œ Included Files */
  "include": ["assets/ts"]                    // âœ… Only process TypeScript files inside `assets/ts/`
}
